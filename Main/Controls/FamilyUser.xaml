<UserControl x:Class="Main.Controls.FamilyUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Main.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid Background="#F3F3F3">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  Margin="0,10">
            <TextBlock x:Name="UserName" Text="UserName" FontSize="20" Margin="30,0,30,0" VerticalAlignment="Center" Width="250"/>
            <TextBlock x:Name="Role" Text="Rola użytkownika" FontSize="20" Margin="30,0,30,0" VerticalAlignment="Center" Width="210"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="DeleteStore" Content="Usuń" Style="{StaticResource DeleteButton}" Click="DeleteFromFamily_Click" Width="140" Margin="30,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
